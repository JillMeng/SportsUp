<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="mxh810.com.sportsup">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SportsUp">
        <activity
            android:name=".AddFreindActivity"
            android:exported="true" />
        <activity android:name=".Dashboard" />
        <activity android:name=".Register" />
        <activity android:name=".FriendList" />
        <activity android:name=".InfoActivity" />

        <activity android:name=".PostActivity"/>
        <activity android:name=".SavePostActivity"/>
        <activity android:name=".UpdateAvatarActivity"/>
        <activity android:name=".Reminder"/>

        <activity
            android:name=".Recipes"
            android:exported="true" />
        <activity
            android:name=".Weights"
            android:exported="true" />
        <activity
            android:name=".HIITCardio"
            android:exported="true" />
        <activity
            android:name=".YogaClass"
            android:exported="true" />
        <activity
            android:name=".UpdateName"
            android:exported="true" />
        <activity
            android:name=".UpdatePassword"
            android:exported="true" />
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".AlarmReceiver"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>